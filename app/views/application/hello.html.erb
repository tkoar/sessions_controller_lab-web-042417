<% if session[:name] %>

  <h1>Hi, <%= session[:name] %>.</h1>
  <p><%= link_to 'Logout', logout_path, method: :destroy, data: {confirm: 'Are you sure?'} %></p>
<% else %>

  <h1>Sign-In</h1>
    <%= form_tag sessions_path do %>
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, placeholder: "First-name Last-name" %>
      <br>
      <%= label_tag :email %>
      <%= text_field_tag :email, nil, placeholder: "email@domain.com" %>
      <br>
      <%= submit_tag "sign-in" %>
  <% end %>

<% end %>
